<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="horizontal"
              android:padding="@dimen/item_shop_evaluate_ll_p">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_shop_evaluate_iv_user_m"
        android:background="@drawable/icon_shop_evaluate_user_head"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_shop_evaluate_ll_m"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textColor="@color/color_666"
                android:textSize="16sp"/>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <RatingBar
                android:id="@+id/room_rating_bar"
                style="@style/roomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4.5">
            </RatingBar>

            <TextView
                android:id="@+id/tv_rating_bar"
                android:layout_toRightOf="@id/room_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五星"
                android:layout_marginLeft="@dimen/item_shop_evaluate_tv_grade_ml"
                android:layout_centerVertical="true"
                android:textSize="10sp"
                android:textColor="@color/color_999"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="初次评价"
                android:layout_weight="1"
                android:textColor="@color/color_333"
                android:textSize="14sp"
                android:clickable="false"/>
            <TextView
                android:id="@+id/tv_first_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-1-30 15:13:30"
                android:textSize="10sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_999"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_first_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_shop_evaluate_tv_comment_mt"
            android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
            android:textColor="@color/color_333"
            android:background="@drawable/order_first_evaluate_bg"
            />
        <LinearLayout
            android:id="@+id/ll_second_comment_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="追加评价"
                android:layout_weight="1"
                android:textColor="@color/color_333"
                android:textSize="14sp"
                android:clickable="false"/>
            <TextView
                android:id="@+id/tv_second_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-1-30 15:13:30"
                android:textSize="10sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_999"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_second_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_shop_evaluate_tv_comment_mt"
            android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
            android:textColor="@color/color_333"
            android:background="@drawable/order_first_evaluate_bg"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>