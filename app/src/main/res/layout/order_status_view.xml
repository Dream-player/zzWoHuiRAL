<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/order_status_linear_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_order_status_cs"
            />

        <TextView
            android:id="@+id/tvOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/ivImage"
            android:text="订单待付款"
            android:textColor="@color/color_333"
            android:textSize="22sp"
            android:textStyle="bold"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F4F3"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="15dp">

            <ImageView
                android:id="@+id/ivOrderActive1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/order_time_node_active_selector"/>

            <TextView
                android:id="@+id/tv_line_one"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/color_ddd"
                />

            <ImageView
                android:id="@+id/ivOrderActive2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/order_time_node_active_selector"/>

            <TextView
                android:id="@+id/tv_line_two"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/color_ddd"
                />

            <ImageView
                android:id="@+id/ivOrderActive3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/order_time_node_active_selector"/>

            <TextView
                android:id="@+id/tv_line_three"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/color_ddd"
                />

            <ImageView
                android:id="@+id/ivOrderActive4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/order_time_node_active_selector"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOrderActive1"
                style="@style/OrderNodeActiveTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />


            <TextView
                android:id="@+id/tvOrderActive2"
                style="@style/OrderNodeActiveTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="超市备货"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tvOrderActive3"
                style="@style/OrderNodeActiveTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等待签收"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />


            <TextView
                android:id="@+id/tvOrderActive4"
                style="@style/OrderNodeActiveTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易完成"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>