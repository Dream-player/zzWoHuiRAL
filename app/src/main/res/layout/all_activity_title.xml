<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/llTitleMain"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/mainColor"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/title_all_padding_bottom_top"
              android:paddingRight="@dimen/title_all_padding_right"
              android:paddingTop="@dimen/title_all_padding_bottom_top">

    <RelativeLayout
        android:id="@+id/titleGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/mainColor"
        android:paddingLeft="@dimen/title_all_back_padding_left">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/titleLLName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/title_all_text_margin_left"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/titleEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/title_all_text_margin_left"
            android:layout_weight="1"
            android:background="@drawable/abc_textfield_search_default_mtrl_alpha"
            android:hint="手机/我惠卡号"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/titleEditCursor"
            android:textCursorDrawable="@drawable/title_edittext_cursor_color"
            android:textSize="16sp"
            android:visibility="gone"
            />

        <RelativeLayout
            android:id="@+id/titleDoSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/mainColor"
            android:paddingLeft="@dimen/title_all_sousuo_padding_left"
            android:paddingRight="@dimen/title_all_sousuo_padding_right"
            android:visibility="gone">

            <TextView
                android:id="@+id/titleAll"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部商品"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivTitleSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_search"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/ivTitleMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_title_more"
            android:visibility="gone"
            />

    </LinearLayout>
</LinearLayout>