<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

                android:padding="10dp">
    <ImageView
        android:layout_marginTop="4dp"
        android:id="@+id/iv_shop_head"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/shop_head"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tvShopName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:singleLine="true"
                android:text="我惠超市"
                android:textColor="@color/color_000"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvIsOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营业中"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评分："
                android:textSize="11sp"/>

            <RatingBar
                android:id="@+id/rb_shop_stars"
                style="@style/roomRatingBar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/head_shop_evaluate_rb_margin_left"
                android:numStars="5"
                android:isIndicator="true"
                android:rating="4.5"
                android:layout_gravity="center">
            </RatingBar>
            <TextView
                android:id="@+id/tv_shop_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.5分"
                android:textSize="11sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_red"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前距离:"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/tvShopRanking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="10km"
                    android:textSize="11sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tvLocation"
                android:background="@drawable/selector_yunjie"
                android:layout_marginTop="-2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:background="@drawable/food_poi_icon_address"/>

                <TextView
                    android:paddingRight="1dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看地图"
                    android:textColor="@color/color_888"/>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>
