<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/mainBGColor"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include
        layout="@layout/all_activity_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivSupermarketIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_supermarket_large"
            />

        <TextView
            android:id="@+id/tvVersionNum"
            android:background="@drawable/text_version_num_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivSupermarketIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="v1.0.0"
            />

        <TextView
            android:id="@+id/tvWoHui365"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="\@wohui365.com"
            android:layout_marginBottom="10dp"
            android:textColor="@color/color_333"/>

        <TextView
            android:id="@+id/tvAboutWoHui"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvWoHui365"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:text="关于我惠"
            android:textColor="@color/color_333"
            />
        <TextView
            android:id="@+id/moreLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:layout_above="@id/tvAboutWoHui"
            android:background="@color/color_d2"/>

        <TextView
            android:id="@+id/tvCheckUpdate"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/moreLine"
            android:layout_centerHorizontal="true"
            android:text="检查更新"
            android:textColor="@color/color_333"
            />
    </RelativeLayout>
</LinearLayout>